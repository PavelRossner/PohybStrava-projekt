@model List<ApplicationUser>


@{
    ViewData["Title"] = "Seznam uživatelů v databázi";
}

<body>
    <div id="sirkatextu">

        <h3>Seznam uživatelů v databázi</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Jméno</th>
                    <th>Příjmení</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Email</td>
                        <td>@item.Jmeno</td>
                        <td>@item.Prijmeni</td>
                        <td>
                            <a asp-action="DeleteAsp" class="pridat-tlacitko" asp-route-id="@item.Id">Smazat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p></p>
        <div>
            <a asp-controller="Account" asp-action="Register" class="pridat-tlacitko">Registrovat uživatele</a> |
            <a asp-action="Administration" class="pridat-tlacitko">Zpět</a>
        </div>
    </div>
</body>
