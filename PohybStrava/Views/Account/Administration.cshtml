@model RegisterViewModel

@{
    ViewData["Title"] = "Administrace účtu";
}

<article>
    <div id="sirkatextuhlavnistrana">

        <h3>Administrace účtu</h3>

        @if (this.Context.User.IsInRole("Admin"))
        {
            <header>
                <div class="row">
                    <div class="col-md-4">
                        <form class="d-flex flex-column gap-2" asp-action="Overview">
                            <button type="submit" class="pridat-tlacitko">Sportovci</button>
                        </form>
                    </div>

                    <div class="col-md-4">
                        <form class="d-flex flex-column gap-2" asp-action="UsersDatabase">
                            <button type="submit" class="pridat-tlacitko">Uživatelé v databázi</button>
                        </form>
                    </div>

                    <div class="col-md-4">
                        <form class="d-flex flex-column gap-2" asp-action="LogOut">
                            <button type="submit" class="pridat-tlacitko">Odhlášení</button>
                        </form>
                    </div>

                </div>
            </header>
        }

        @if (this.Context.User.IsInRole("Admin") == false)
        {
            <p>Pro správu účtu je nutné se přihlásit jako administrátor.</p>
        }
    </div>
</article>
