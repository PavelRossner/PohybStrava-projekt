@model PohybStrava.Models.Diet

@{
    ViewData["Title"] = "Přidat záznam";
}

<body>
    <div id="sirkatextuhlavnistrana">

        @if (this.Context.User.IsInRole("Admin") == false)

        {
            <h3>Přidejte informace o stravě</h3>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DatumDiet" class="control-label"></label>
                            <input asp-for="DatumDiet" class="form-control" />
                            <span asp-validation-for="DatumDiet" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Potravina" class="control-label"></label>
                            <input asp-for="Potravina" class="form-control" />
                            <span asp-validation-for="Potravina" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Energie" class="control-label"></label>
                            <input asp-for="Energie" class="form-control" />
                            <span asp-validation-for="Energie" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mnozstvi" class="control-label"></label>
                            <input asp-for="Mnozstvi" class="form-control" />
                            <span asp-validation-for="Mnozstvi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="pridat-tlacitko" value="Vytvořit" />
                        </div>
                    </form>
                </div>
            </div>
            <p></p>
            <div>
                <a asp-action="Index" class="pridat-tlacitko">Zpět</a>
            </div>
        }

        @if (this.Context.User.IsInRole("Admin"))
        {
            <p>Admin nemůže data upravovat. Přihlaste se jako uživatel.</p>
            <p></p>
            <div>
                <a asp-action="Index" class="pridat-tlacitko">Zpět</a>
            </div>
        }
    </div>
</body>
